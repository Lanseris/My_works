<Window x:Class="Workers_Datal.AddDepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workers_Datal"
        mc:Ignorable="d"
        Title="AddDepartmentWindow" Height="300" Width="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>

            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" HorizontalAlignment="Center" FontSize="18">Введите название отдела</Label>
        <TextBox Name ="DepNameTb"  Grid.Row="2" HorizontalAlignment="Center" Width="200" Margin="20" FontSize="18"></TextBox>
        <Button Name="AddBt" Grid.Row="3" HorizontalAlignment="Stretch" Width="150" Margin="20" FontSize="17">Добавить отдел</Button>

    </Grid>
</Window>
